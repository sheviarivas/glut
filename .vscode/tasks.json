{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build GLUT",
            "type": "shell",
            "command": "g++",
            "args": [
                "-o",
                "glut_renderer",
                "glut_renderer.cpp",
                "-lGL",
                "-lGLU",
                "-lglut"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Run GLUT",
            "type": "shell",
            "command": "./glut_renderer",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build and Run",
            "dependsOn": [
                "Build GLUT"
            ],
            "dependsOrder": "sequence",
            "command": "./glut_renderer",
            "type": "shell",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build GLUT included",
            "type": "shell",
            "command": "g++",
            "args": [
                "-o",
                "including_glut_renderer",
                "glut_renderer.cpp",
                "including_glut_renderer.cpp",
                "-lGL",
                "-lGLU",
                "-lglut"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
    ]
}