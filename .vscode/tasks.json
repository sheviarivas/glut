{
    "tasks": [
        {
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lGL",
                "-lGLU",
                "-lglut"
            ],
            "type": "cppbuild",
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "build glut app",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-g",
                "src/main.cpp",
                "src/Mission.cpp",
                "src/Renderer.cpp",
                "-Iinclude",
                "-lGL",
                "-lglut",
                "-o",
                "bin/app"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "run glut app w/o build",
            "type": "shell",
            "command": "${workspaceFolder}/bin/app",
            "args": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ],
    "version": "2.0.0"
}